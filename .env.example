# DreamUp Game QA Testing - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required API Keys
# =============================================================================

# Browserbase API key (required)
# Get your API key from: https://browserbase.com
BROWSERBASE_API_KEY=bb_live_your_actual_key_here

# Browserbase project ID (required)
# Get your project ID from: https://browserbase.com
BROWSERBASE_PROJECT_ID=your_project_id_here

# OpenAI API key (required for GPT-4 Vision)
# Get your API key from: https://platform.openai.com
OPENAI_API_KEY=sk-your_actual_key_here

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info

# Reformat logs to "msg | data" format instead of JSON (default: false)
# Set to 'true' or '1' to enable
REFORMAT_LOGS=false

# =============================================================================
# Timeout Configuration (all in milliseconds)
# =============================================================================

# Maximum test duration (default: 240000 = 4 minutes)
MAX_TEST_DURATION=240000

# Game loading timeout (default: 60000 = 60 seconds)
GAME_LOAD_TIMEOUT=60000

# Interaction timeout (default: 90000 = 90 seconds)
INTERACTION_TIMEOUT=90000

# Screenshot capture timeout (default: 10000 = 10 seconds)
SCREENSHOT_TIMEOUT=10000

# Page navigation timeout (default: 30000 = 30 seconds)
PAGE_NAVIGATION_TIMEOUT=30000

# Delay after clicking start button (default: 2000 = 2 seconds)
POST_START_DELAY=2000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable detailed debug logging (default: false)
# Backward compatible with DEBUG flag
DEBUG=false

# Enable result caching (default: false)
ENABLE_CACHING=false

# Enable real-time progress updates (default: false)
ENABLE_PROGRESS_UPDATES=false

# Enable error recovery with retries (default: false)
ENABLE_ERROR_RECOVERY=false

# Enable automatic screenshot cleanup after test (default: false)
ENABLE_SCREENSHOT_CLEANUP=false

# Enable adaptive QA mode (default: false)
ENABLE_ADAPTIVE_QA=false

# =============================================================================
# Start Detection Strategy Flags
# =============================================================================

# Enable DOM selector strategy (default: true, enabled by default)
ENABLE_DOM_STRATEGY=true

# Enable natural language strategy (default: true, enabled by default)
ENABLE_NATURAL_LANGUAGE_STRATEGY=true

# Enable vision-based strategy (default: true, enabled by default)
ENABLE_VISION_STRATEGY=true

# Enable state analysis strategy (default: true, enabled by default)
ENABLE_STATE_ANALYSIS_STRATEGY=true

# =============================================================================
# Cursor IDE Integration (Optional)
# =============================================================================

# Use Cursor IDE browser for debugger URL (default: false)
# Set to 'true' or '1' to enable
USE_CURSOR_BROWSER=true

# Alternative: Use CURSOR_BROWSER instead of USE_CURSOR_BROWSER
# CURSOR_BROWSER=false

# Cursor environment variables (automatically detected if available)
# CURSOR_SESSION_ID=
# CURSOR_WORKSPACE=
