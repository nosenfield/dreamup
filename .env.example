# Browserbase Configuration. Sign up at https://browserbase.com
BROWSERBASE_API_KEY=bb_live_xxxxx
BROWSERBASE_PROJECT_ID=xxxxx

# OpenAI Configuration. Get your API key at https://platform.openai.com
OPENAI_API_KEY=sk-xxxxx
OPENROUTER_API_KEY=sk-xxxxx

# Feature Flags (default: false for MVP)
DEBUG=false
ENABLE_CACHING=false
ENABLE_PROGRESS_UPDATES=false
ENABLE_ERROR_RECOVERY=false
ENABLE_SCREENSHOT_CLEANUP=false

# QA Modes in order of precedence
ENABLE_STAGEHAND_AGENT=true
ENABLE_ADAPTIVE_QA=false

# Stagehand Agent Model Selection
#  Tier 1 (Best CUA Performance):
#  - anthropic/claude-3.5-sonnet - Best reasoning, vision, and tool use (~$0.30/run)
#
#  Tier 2 (Balanced):
#  - openai/gpt-4o - Good performance, faster, cheaper (~$0.15/run)
#  - google/gemini-2.0-flash-thinking-exp - Fast, experimental (~$0.05/run)
#
#  Tier 3 (Budget):
#  - google/gemini-2.0-flash-exp - Lowest cost (~$0.03/run)
STAGEHAND_AGENT_MODEL=anthropic/claude-3.5-sonnet

# Start Button Detection Strategy Flags (default: true for DOM/NL/Vision, false for State Analysis)
# ENABLE_DOM_STRATEGY=true
# ENABLE_NATURAL_LANGUAGE_STRATEGY=true
# ENABLE_VISION_STRATEGY=true
# ENABLE_STATE_ANALYSIS_STRATEGY=false

# Timeout Overrides (milliseconds)
# Only set these if you need to override defaults
# MAX_TEST_DURATION=240000
# GAME_LOAD_TIMEOUT=60000
# INTERACTION_TIMEOUT=90000
# PAGE_NAVIGATION_TIMEOUT=30000
# SCREENSHOT_TIMEOUT=10000
# POST_START_DELAY=2000
